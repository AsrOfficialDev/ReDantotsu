<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/support_development"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_dialog_desc"
        android:textSize="14sp"
        android:alpha="0.7"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <!-- Become a Supporter Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/becomeSupporterCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨"
                android:textSize="28sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/become_a_supporter"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/poppins_bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Supporter Badge Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:alpha="0.6"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_round_info_24"
            app:tint="?attr/colorOnSurface"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supporter_badge_info"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
